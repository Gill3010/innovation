rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para usuarios autenticados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para proyectos de investigación
    match /research_projects/{projectId} {
      allow read: if request.auth != null && 
        (resource.data.ownerId == request.auth.uid || 
         request.auth.uid in resource.data.collaborators);
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
    
    // Reglas para papers y publicaciones
    match /papers/{paperId} {
      allow read: if request.auth != null && 
        (resource.data.ownerId == request.auth.uid || 
         request.auth.uid in resource.data.collaborators);
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
    
    // Reglas para biblioteca personal
    match /user_library/{userId}/papers/{paperId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para colaboraciones
    match /collaborations/{collaborationId} {
      allow read, write: if request.auth != null && 
        (resource.data.participants[request.auth.uid] != null);
    }
    
    // Reglas para métricas y analytics (solo lectura para usuarios autenticados)
    match /analytics/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Reglas para mensajes de contacto (cualquiera puede crear, solo admin puede leer)
    match /contact_messages/{messageId} {
      allow create: if true;  // Cualquiera puede enviar mensaje de contacto
      allow read, update, delete: if request.auth != null;  // Solo usuarios autenticados pueden leer
    }
  }
}
